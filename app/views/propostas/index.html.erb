<p id="notice"><%= notice %></p>

<h1>Propostas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Valor</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @propostas.each do |proposta| %>
      <tr>
        <td><%= proposta.nome %></td>
        <td><%= proposta.descricao %></td>
        <td><%= proposta.valor_formatado %></td>
        <td><%= proposta.inicio_formatado %></td>
        <td><%= proposta.fim_formatado %></td>
        <td><%= proposta.cidade %></td>
        <td><%= link_to 'Exibir', proposta %></td>
        <td><%= link_to 'Editar', edit_proposta_path(proposta) %></td>
        <td><%= link_to 'Deletar', proposta, method: :delete, data: { confirm: 'Tem certeza que deseja remover a proposta?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Proposta', new_proposta_path %>
